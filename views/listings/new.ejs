<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h2>Create a new listing</h2>

    <form method="POST" action="/listings">
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]"  type="text" placeholder="Enter title" class="form-control"/>
        </div>
        <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter description" class="form-control"></textarea>
        </div>
        <div class="mb-2">
            <label for="image" class="form-label">Image</label>
            <input type="text" placeholder="Enter image URL/Link" class="form-control">
        </div>
        <div class="row">
        <div class="mb-2 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" type="number" placeholder="Enter price" class="form-control"/>
        </div>
        <div class="mb-2 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" type="text" placeholder="India" class="form-control"/>
        </div>
        </div>
        <div class="mb-2">
            <label for="location" class="form-label">location</label>
            <input name="listing[location]" type="text" placeholder="Mumbai,Maharashtra" class="form-control"/>
        </div>
        
         <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
    </form>
    </div>
    </div>
</body>
